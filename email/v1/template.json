{
	"message_type":"email",
	"icon-class":"icon-envelope",
	"label":"Standard Email Template",
	"segments":true,
	"configuration":{
		"from_name":{"type":"string"},
		"from_email":{"type":"string"}
	},
	"formats":[
		{
			"label":"HTML",
			"render_engine":"hogan",
			"render_file":"index.html",
			"configuration":{
				"html":{"type":"wysiwyg"}
			}
		},
		{
			"label":"Text",
			"help":"Emails are sent with both HTML and text formats, for mobile readers",
			"render_engine":"hogan",
			"render_file":"index.txt",
			"configuration":{
				"text":{"type":"text"}
			}
		}
	]
}